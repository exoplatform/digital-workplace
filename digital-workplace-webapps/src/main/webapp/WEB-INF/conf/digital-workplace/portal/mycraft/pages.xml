<page-set xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.exoplatform.org/xml/ns/gatein_objects_1_8 http://www.exoplatform.org/xml/ns/gatein_objects_1_8"
          xmlns="http://www.exoplatform.org/xml/ns/gatein_objects_1_8">
  <page>
    <name>wallet</name>
    <title>Wallet</title>
    <access-permissions>*:/platform/users;*:/platform/externals</access-permissions>
    <edit-permission>*:/platform/administrators</edit-permission>
    <container template="system:/groovy/portal/webui/container/UIContainer.gtmpl" cssClass="singlePageApplication">
      <container id="top-wallet-container" template="system:/groovy/portal/webui/container/UIAddOnContainer.gtmpl">
        <name>top-wallet-container</name>
        <access-permissions>*:/platform/users;*:/platform/externals</access-permissions>
        <factory-id>addonContainer</factory-id>
      </container>
      <container id="wallet-container" template="system:/groovy/portal/webui/container/UIAddOnContainer.gtmpl">
        <name>wallet-container</name>
        <access-permissions>*:/platform/users;*:/platform/externals</access-permissions>
        <factory-id>addonContainer</factory-id>
      </container>
      <container id="bottom-wallet-container" template="system:/groovy/portal/webui/container/UIAddOnContainer.gtmpl">
        <name>bottom-wallet-container</name>
        <access-permissions>*:/platform/users;*:/platform/externals</access-permissions>
        <factory-id>addonContainer</factory-id>
      </container>
    </container>
  </page>
</page-set>
